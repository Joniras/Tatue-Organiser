        <Label x:Name="lblMessage" Content="..." Margin="10,0,10,11" Background="#fff176" Height="28" VerticalAlignment="Bottom" Grid.ColumnSpan="2"/>
        <Label x:Name="lblavgFreundlichkeit" Content="0" Margin="158,0,24,207" VerticalAlignment="Bottom" BorderThickness="1" BorderBrush="#FFD6D6D6" Grid.ColumnSpan="2"/>
        <Label x:Name="lblavgKompetenz" Content="0" Margin="158,0,23,177" VerticalAlignment="Bottom" BorderBrush="#FFC9C9C9" BorderThickness="1" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
