<Window x:Class="Client_Prototype.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="418.207" Width="742.879"
        >
    <Grid>
        <TabControl Margin="10,0,10,82">
            <TabItem Header="Abteilung">
                <StackPanel>
                    <DataGrid x:Name="gridAbteilung" Margin="0,0,-1,0">

                    </DataGrid>

                </StackPanel>
            </TabItem>
            <TabItem Header="Guide">
                <StackPanel>
                    <DataGrid x:Name="gridGuide">
                    </DataGrid>
                    <Button x:Name="btnAddGuide" Content="Guide hinzufügen" Click="btnAddGuide_Click"/>

                </StackPanel>
            </TabItem>


        </TabControl>
        <Label x:Name="lblMessage" Content="..." Margin="10,0,10,10" Background="#fff176" Height="28" VerticalAlignment="Bottom"/>
        <Button x:Name="btnEdit" Content="Bearbeiten" HorizontalAlignment="Left" Margin="10,0,0,45" Width="205" Click="btnEdit_Click" Height="32" VerticalAlignment="Bottom"/>
        <Button x:Name="btnTemp" Content="Ladebildschirm testen" Margin="0,0,10,45" Height="32" Click="btnTemp_Click" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="230"/>


    </Grid>
</Window>
