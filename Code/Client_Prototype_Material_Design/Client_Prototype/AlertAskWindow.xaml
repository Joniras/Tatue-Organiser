<Window x:Class="Client_Prototype.AlertAskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client_Prototype"
        mc:Ignorable="d"
        Title="AlertAskWindow" Height="132.089" Width="300" Closed="Window_Closed">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label x:Name="lblText" HorizontalAlignment="Right" Content="Möchten Sie das wirklich löschen?" Margin="0,10,10,52" FontSize="17.333" Grid.ColumnSpan="2" Width="272" />
        <Button x:Name="btnJa" Content="Ja" Margin="10,54,10,15" Click="btnJa_Click" Height="Auto"/>
        <Button x:Name="btnNein" Content="Nein" Margin="10,54,10,15" Click="btnNein_Click" Height="Auto" Grid.Column="1" />

    </Grid>
</Window>
