<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="Client_Prototype.MainWindow"
        Title="Tatue-Organiser" Height="596.207" Width="976.379" Background="#FF3F51B5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="223*"/>
        </Grid.ColumnDefinitions>
        <TabControl HorizontalAlignment="Left" Height="537" VerticalAlignment="Top" Width="878" Grid.ColumnSpan="2">
            <TabItem Header="Abteilung-Editor" Margin="-2,-2,-206,0">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <StackPanel>
                    <Label Content="Alle Abteilungen:" Background="White"/>

                    <DataGrid x:Name="gridAbteilung" Margin="0,0,-1,0"/>

                </StackPanel>
            </TabItem>
            <TabItem Header="Schueler-Editor" Margin="207,-2,-465,0">
                <StackPanel>
                    <DataGrid x:Name="gridGuide"/>
                    <Button x:Name="btnAddGuide" Content="Add Schueler" Click="btnAddSchueler_Click"/>

                </StackPanel>
            </TabItem>


        </TabControl>
        <Label x:Name="lblMessage" Content="Label" HorizontalAlignment="Left" Margin="0,537,0,0" VerticalAlignment="Top" Height="28" Width="968" Background="#FFFBFFB4" Grid.ColumnSpan="2"/>
        <Button x:Name="btnEdit" Content="Edit" HorizontalAlignment="Left" Margin="807,145,0,0" VerticalAlignment="Top" Width="75" Click="btnEdit_Click" Grid.Column="1"/>
        <Button x:Name="btnTemp" Content="Test Loading Screen" HorizontalAlignment="Left" Margin="807,206,0,0" VerticalAlignment="Top" Width="75" Height="48" Click="btnTemp_Click" Grid.Column="1"/>
        <Button x:Name="btnDelete" Content="Delete" Grid.Column="1" HorizontalAlignment="Left" Margin="807,170,0,0" VerticalAlignment="Top" Width="75" Click="btnDelete_Click"/>


    </Grid>
</Window>
