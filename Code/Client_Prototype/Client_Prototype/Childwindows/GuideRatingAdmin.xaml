        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="763*"/>
            <ColumnDefinition Width="198*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="gridRatings" Margin="10,10,10,251" Grid.ColumnSpan="2" Background="White"/>
        <Label x:Name="lblFreundlichkeit" Content="Freundlichkeit" Margin="10,0,10,209" VerticalAlignment="Bottom" Grid.ColumnSpan="2"/>
        <Label x:Name="lblKompetenz" Content="Kompetenz" Margin="10,0,10,178" VerticalAlignment="Bottom" Grid.ColumnSpan="2"/>
